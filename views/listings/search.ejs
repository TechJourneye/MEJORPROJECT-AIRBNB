<% layout("/layouts/boilarplate")%>
 <% if(searchedListing.length>0) {%>
<style>
     .tax-info {
        display: none;
      }

      .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
        width: 16rem;
      }
</style>

<div id="filters" class="mb-3">

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>

</div>

<!-- all-listing -->
    <div class="row g-4">  

    <%  for(listing of searchedListing){%>
          <div class=" col-12 col-md-5 col-lg-4">

            <a class="card-a" href="/listing/<%=listing._id%>">
              <div class="card h-100 cardidx" >
                  <!-- <div class="your-scroll-container"> -->
                      <img src="<%=listing.img.url%>" class="card-img-top" alt="...">
                      <div class="card-body">
                          <h5 class="card-title"><%=listing.title%></h5>
                          <p class="price"> Price:&#8377;<b><%=listing.price.toLocaleString("en-IN")%>/night</b>
                            <i class="tax-info">&nbsp;+18% GST</i>
                           </p>
                          <p class="country">Country: <b> <%=listing.country%></b></p>
                      </div>
                  <!-- </div> -->
  
                  </div>
          </a>
  

          </div>
       
            <%}%>

    </div>

    <script>
      function setUpTaxToggle (){
       let taxSwitch=document.getElementById("flexSwitchCheckDefault" );
        taxSwitch.addEventListener("change",()=>{
          let taxInfo=document.getElementsByClassName("tax-info");
          for(info of taxInfo){
           info.style.display=taxSwitch.checked?"inline":"none";
          }
        })
      }
       document.addEventListener("DOMContentLoaded",setUpTaxToggle);
         // BACK/FORWARD CACHE FIX
       window.addEventListener("pageshow",setUpTaxToggle);
      </script>
     <%} else {%>
         <h2 class="offset-4">No such results found</h2>
        <%}%>